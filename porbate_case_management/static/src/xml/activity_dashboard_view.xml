<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="ActivityDashboard">
        <div>
            <div class="form-group">
                <h1 style="margin: 20px;">
                    Activity Dashboard
                </h1>
            </div>
            <div>
                <div class="filter_view_tb"></div>
            </div>
            <br></br>
            <div>
                <div class="table_view"></div>
            </div>

            <br></br>
            <div>
                <div class="table_view_activity"></div>
            </div>
        </div>
    </t>

    <t t-name="ManageActivity">
        <section class="dashboard_main_section">
            <div class="activity_dash_card row">

                <div class="col-sm-12 col-md-4">
                    <div class="activity-dashboard-card activity-my-activity draft_stage">
                        <div class="activity-dashboard-card__icon-container bg-mauve-light d-flex">
                            <i class="fa fa-clock-o text-mauve" style="padding-right: 80px; color: #3c3939;font-size: 30px;
                            padding-left: 0px;padding-bottom: 5px;padding-top: 13px;"/>
                        </div>
                        <div style="font-size: 30px;color: #3c3939;padding-left: 0px;padding-bottom: 17px;padding-top: 11px;">
                            <t t-esc="len_draft"/>
                        </div>
                        <div class="dashboard-card__details"
                             style="padding-left: 26px;padding-bottom: 03px;padding-top: 11px;">
                            <p>
                                <h4>Draft</h4>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-4">
                    <div class="activity-dashboard-card waiting_tiss_stage">
                        <div class="activity-dashboard-card__icon-container bg-mauve-light d-flex">
                            <i class="fa fa-clock-o text-mauve" style="padding-right: 80px; color: #3c3939;font-size: 30px;
                            padding-left: 0px;padding-bottom: 5px;padding-top: 13px;"/>
                        </div>

                        <div style="font-size: 30px;color: #3c3939;padding-left: 0px;padding-bottom: 17px;padding-top: 11px;">
                            <t t-esc="len_waiting_tiss"/>
                        </div>
                        <div class="dashboard-card__details"
                             style="padding-left: 26px;padding-bottom: 03px;padding-top: 11px;">
                            <h3>
                                <span>
                                    <div id="leads_this_year"/>
                                    <div id="leads_this_quarter"/>
                                    <div id="leads_this_month"/>
                                    <div id="leads_this_week"/>
                                </span>
                            </h3>
                            <h4>Awaiting For Tiss</h4>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12 col-md-4">
                    <div class="activity-dashboard-card completion_form_stage">
                        <div class="activity-dashboard-card__icon-container bg-mauve-light d-flex">
                            <i class="fa fa-clock-o text-mauve" style="padding-right: 80px; color: #3c3939;font-size: 30px;
                            padding-left: 0px;padding-bottom: 5px;padding-top: 13px;"/>
                        </div>

                        <div style="font-size: 30px;color: #3c3939;padding-left: 0px;padding-bottom: 17px;padding-top: 11px;">
                            <t t-esc="len_completion_form"/>
                        </div>
                        <div class="dashboard-card__details"
                             style="padding-left: 26px;padding-bottom: 03px;padding-top: 11px;">
                            <h3>
                                <span>
                                    <div id="leads_this_year"/>
                                    <div id="leads_this_quarter"/>
                                    <div id="leads_this_month"/>
                                    <div id="leads_this_week"/>
                                </span>
                            </h3>
                            <p>
                                <h4>Completion Of Forms</h4>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12 col-md-4">
                    <div class="activity-dashboard-card pending_hro_approval_stage">
                        <div class="activity-dashboard-card__icon-container bg-mauve-light d-flex">
                            <i class="fa fa-clock-o text-mauve" style="padding-right: 80px; color: #3c3939;font-size: 30px;
                            padding-left: 0px;padding-bottom: 5px;padding-top: 13px;"/>
                        </div>
                        <div style="font-size: 30px;color: #3c3939;padding-left: 0px;padding-bottom: 17px;padding-top: 11px;">
                            <t t-esc="len_pending_hro_approval"/>
                        </div>
                        <div class="dashboard-card__details"
                             style="padding-left: 26px;padding-bottom: 03px;padding-top: 11px;">
                            <h3>
                                <span>
                                    <div id="leads_this_year"/>
                                    <div id="leads_this_quarter"/>
                                    <div id="leads_this_month"/>
                                    <div id="leads_this_week"/>
                                </span>
                            </h3>
                            <p>
                                <h4>Pending HRO Approval</h4>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12 col-md-4">
                    <div class="activity-dashboard-card pending_payment_stage">
                        <div class="activity-dashboard-card__icon-container bg-mauve-light d-flex">
                            <i class="fa fa-clock-o text-mauve" style="padding-right: 80px; color: #3c3939;font-size: 30px;
                            padding-left: 0px;padding-bottom: 5px;padding-top: 13px;"/>
                        </div>
                        <div style="font-size: 30px;color: #3c3939;padding-left: 0px;padding-bottom: 17px;padding-top: 11px;">
                            <t t-esc="len_pending_payment"/>
                        </div>
                        <div class="dashboard-card__details"
                             style="padding-left: 26px;padding-bottom: 03px;padding-top: 11px;">
                            <h3>
                                <span>
                                    <div id="leads_this_year"/>
                                    <div id="leads_this_quarter"/>
                                    <div id="leads_this_month"/>
                                    <div id="leads_this_week"/>
                                </span>
                            </h3>
                            <p>
                                <h4>Pending Payment</h4>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12 col-md-4">
                    <div class="activity-dashboard-card closed_stage">
                        <div class="activity-dashboard-card__icon-container bg-mauve-light d-flex">
                            <i class="fa fa-clock-o text-mauve" style="padding-right: 80px; color: #3c3939;font-size: 30px;
                            padding-left: 0px;padding-bottom: 5px;padding-top: 13px;"/>
                        </div>
                        <div style="font-size: 30px;color: #3c3939;padding-left: 0px;padding-bottom: 17px;padding-top: 11px;">
                            <t t-esc="len_closed"/>
                        </div>
                        <div class="dashboard-card__details"
                             style="padding-left: 26px;padding-bottom: 03px;padding-top: 11px;">
                            <h3>
                                <span>
                                    <div id="leads_this_year"/>
                                    <div id="leads_this_quarter"/>
                                    <div id="leads_this_month"/>
                                    <div id="leads_this_week"/>
                                </span>
                            </h3>
                            <p>
                                <h4>Closed</h4>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </t>
    <t t-name="ActivityTable">
        <div class="table_draft_stage">
            <table cellspacing="10" width="100%"
                   style="padding: 24px; background-color: white; color: #454748; border-collapse:separate;">
                <thead>
                    <tr>
                        <th>Draft</th>
                    </tr>

                    <t t-if="draft_stage == ''">
                        <td>No Data Available</td>
                    </t>
                </thead>
                <t t-if="draft_stage != ''">
                    <thead class="table table-bordered mt32">
                        <tr class="table_head">
                            <th class="table_head_">Name</th>
                            <th class="table_head_">Created by</th>
                            <th class="table_head_">Created on</th>
                            <th class="table_head_">View</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="draft_stage" t-as="line">
                            <td>
                                <t t-esc="line['name']"/>
                            </td>
                            <td>
                                <t t-esc="line['create_uid'][1]"/>
                            </td>
                            <td>
                                <t t-esc="line['create_date']"/>
                            </td>
                            <td class="click-view">
                                <button t-att-value="line['id']"
                                        style="border-radius: 8px; background-color: #c4c4f2;width: 100px;height: 35px;">
                                    View
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </t>
            </table>
        </div>
        <div class="table_today_activity">
            <table cellspacing="10" width="100%"
                   style="padding: 24px; background-color: white; color: #454748; border-collapse:separate;">
                <thead>
                    <tr>
                        <th>Awaiting For Tiss</th>
                    </tr>
                    <t t-if="waiting_tiss_stage == ''">
                        <td>No Data Available</td>
                    </t>
                </thead>

                <t t-if="waiting_tiss_stage != ''">
                    <thead class="table table-bordered mt32">
                        <tr class="table_head">
                            <th class="table_head_">Name</th>
                            <th class="table_head_">Assigned to</th>
                            <th class="table_head_">Assigned on</th>
                            <th class="table_head_">View</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="waiting_tiss_stage" t-as="line">
                            <td>
                                <t t-esc="line['name']"/>
                            </td>
                            <td>
                                <t t-esc="line['supervisor_id']['1']"/>
                            </td>
                            <td>
                                <t t-esc="line['approve_date_creator']"/>
                            </td>
                            <td class="click-view">
                                <button t-att-value="line['id']"
                                        style="border-radius: 8px; background-color: #c4c4f2;width: 100px;height: 35px;">
                                    View
                                </button>
                            </td>

                        </tr>
                    </tbody>
                </t>
            </table>
        </div>

        <div class="table_main_view">
            <table cellspacing="10" width="100%"
