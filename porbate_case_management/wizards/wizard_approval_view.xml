<?xml version="1.0"?>
<odoo>
        <record id="reject_approval" model="ir.ui.view">
            <field name="name">reject_approval</field>
            <field name="model">reason.reject</field>
            <field name="arch" type="xml">
                <form string="Reason Reject">
                    <field name="remarks" placeholder="What Reason Reject?"/>
                    <footer>
                        <button name="action_reject" string="Submit" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>
